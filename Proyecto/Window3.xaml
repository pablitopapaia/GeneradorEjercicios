<Window x:Class="Proyecto.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto"
        mc:Ignorable="d"
        Title="Window3" Height="450" Width="800" Background="Azure">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="244*"/>
            <ColumnDefinition Width="295*"/>
            <ColumnDefinition Width="253*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="74*"/>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="250*"/>
            <RowDefinition Height="47*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Column="1" x:Name="editFile" HorizontalAlignment="Center" Height="251" Grid.Row="2" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="295" Margin="0,0,0,46" Grid.RowSpan="2" />
        <Label Content="Configuración" Grid.Column="1" HorizontalAlignment="Center"  Grid.Row="1" VerticalAlignment="Top" FontSize="22" Margin="74,0,75,0"  />
        <Button Content="Guardar" Grid.Column="1" HorizontalAlignment="Center" Click="guardar" Grid.Row="3" VerticalAlignment="Center" Width="75" Background="Gold"/>

    </Grid>
</Window>
