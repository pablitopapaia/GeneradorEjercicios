<Window x:Class="Proyecto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto"
        mc:Ignorable="d"
        Title="Generador de Ejercicios">
    <Grid Margin="0,0,-30,0">
        <Grid.Background>
            <ImageBrush ImageSource="fondo.jpg"/>
        </Grid.Background>
        <Label x:Name="Ejercicio" Content="Ejercicio" HorizontalAlignment="Left" Margin="148,79,0,0" VerticalAlignment="Top" FontSize="22" Foreground="White">
            <Label.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF5D2DFF" Offset="1"/>
                    <GradientStop Color="#FF5529EA" Offset="0.423"/>
                </LinearGradientBrush>
            </Label.Background>
        </Label>
        <Label x:Name="Serie" Content="Series" HorizontalAlignment="Left" Margin="406,79,0,0" VerticalAlignment="Top" FontSize="22" Foreground="White">
            <Label.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF5D2DFF" Offset="1"/>
                    <GradientStop Color="#FF5529EA" Offset="0.423"/>
                </LinearGradientBrush>
            </Label.Background>
        </Label>
        <Label x:Name="Repes" Content="Repeticones" HorizontalAlignment="Left" Margin="616,79,0,0" VerticalAlignment="Top" FontSize="22" Foreground="White">
            <Label.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF5D2DFF" Offset="1"/>
                    <GradientStop Color="#FF5529EA" Offset="0.423"/>
                </LinearGradientBrush>
            </Label.Background>
        </Label>
        <Label x:Name="mEjercicio" Content="Aqui se mostrara el ejercicio" HorizontalAlignment="Left" Margin="83,143,0,0" VerticalAlignment="Top" FontSize="18" Background="White" Width="200"/>
        <Label x:Name="mSeries" Content="Aqui saldrán las series" HorizontalAlignment="Left" Margin="351,143,0,0" VerticalAlignment="Top" FontSize="18" Background="White" Width="200"/>
        <Label x:Name="mRepes" Content="Aqui se mostrarán las repes" HorizontalAlignment="Left" Margin="570,143,0,0" VerticalAlignment="Top" FontSize="18" Background="White" Width="200"/>
        <RadioButton x:Name="btnPecho" Content="Pecho" HorizontalAlignment="Left" Margin="190,307,0,0" VerticalAlignment="Top" FontSize="20" Background="White"/>
        <RadioButton x:Name="btnPierna" Content="Pierna" HorizontalAlignment="Left" Margin="190,328,0,0" VerticalAlignment="Top" FontSize="20"/>
        <RadioButton x:Name="btnEspalda" Content="Espalda" HorizontalAlignment="Left" Margin="190,354,0,0" VerticalAlignment="Top" FontSize="20"/>
        <RadioButton x:Name="btnBrazo" Content="Brazo" HorizontalAlignment="Left" Margin="190,380,0,0" VerticalAlignment="Top" FontSize="20"/>
        <RadioButton x:Name="btnHombro" Content="Hombro" HorizontalAlignment="Left" Margin="190,406,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Selecciona la parte del cuerpo
               " HorizontalAlignment="Left" Margin="83,255,0,0" VerticalAlignment="Top" FontSize="20" Width="278" Height="37" >
            <Label.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="#FFD65AF1" Offset="0.556"/>
                </LinearGradientBrush>
            </Label.Background>
        </Label>
        <Button x:Name="btnGenerar" Content="Generar" Click="generar" HorizontalAlignment="Left" Margin="570,347,0,0" VerticalAlignment="Top" FontSize="22" Foreground="#FFEEE5E5" BorderBrush="#FFA62323">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FFF1C21F" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</Window>
